<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.EditSetsActivity"
    tools:showIn="@layout/activity_sets">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:background="@drawable/concentration_curls1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/image2"
                android:background="@drawable/concentration_curls2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_sets_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/table_sets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:text="Set" />

                    <TextView
                        android:gravity="center"
                        android:text="Reps" />

                </TableRow>

            </TableLayout>
        </ScrollView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="Reps" />

        <EditText
            android:id="@+id/etReps"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:ems="3"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:selectAllOnFocus="true"
            android:text="10" />

        <Button
            android:id="@+id/bAdd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+" />

        <Button
            android:id="@+id/bSubstract"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-" />

        <ImageButton
            android:id="@+id/bDelete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_delete" />

    </TableRow>

    <TableRow
        android:id="@+id/bResttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_plus"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorAccent"
            android:padding="16dp"
            android:text="Rest time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResttime"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="16dp"
            android:singleLine="true"
            android:text="90s"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>


</LinearLayout>